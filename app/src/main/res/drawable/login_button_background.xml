<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/login_button_pressed_background" />
            <padding
                android:top="5dp"
                android:right="5dp"
                android:left="5dp"
                android:bottom="5dp"/>
            <stroke
                android:color="#ffffff"
                android:width="1dp"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/login_button_background" />
            <padding
                android:top="5dp"
                android:right="5dp"
                android:left="5dp"
                android:bottom="5dp"/>
            <stroke
                android:color="#ffffff"
                android:width="1dp"/>
        </shape>
    </item>
</selector>